{
  "name": "yest",
  "description": "Utilities and matchers for jest.",
  "author": "Joost Lubach <joostlubach@gmail.com>",
  "private": true,
  "exports": {
    ".": {
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      },
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      }
    },
    "./matchers": {
      "require": {
        "types": "./dist/cjs/matchers/index.d.ts",
        "default": "./dist/cjs/matchers/index.js"
      },
      "import": {
        "types": "./dist/esm/matchers/index.d.ts",
        "default": "./dist/esm/matchers/index.js"
      }
    }
  },
  "scripts": {
    "build": "pnpm clean && pnpm build:esm && pnpm build:cjs",
    "build:esm": "pnpm build:tsc:esm && pnpm build:copy:esm",
    "build:tsc:esm": "tsc -p tsconfig.prod.json --module ESNext --outDir dist/esm",
    "build:copy:esm": "copyfiles -u 1 src/**/*.yml src/**/*.css dist/esm",
    "build:cjs": "pnpm build:tsc:cjs && pnpm build:copy:cjs",
    "build:tsc:cjs": "tsc -p tsconfig.prod.json --module CommonJS --outDir dist/cjs",
    "build:copy:cjs": "copyfiles -u 1 src/**/*.yml src/**/*.css dist/cjs",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "check": "tsc -p . --noEmit",
    "test": "NODE_ENV=test jest"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.40",
    "@types/jest": "^29.5.0",
    "@types/md5": "^2.3.2",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "disposable-timer": "workspace:^",
    "ytil": "workspace:^"
  }
}